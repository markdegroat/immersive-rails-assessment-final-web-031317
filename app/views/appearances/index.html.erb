<h1>All Appearances</h1>

<ul>
  <% @appearances.each do |appearance| %>
    <%= link_to appearance.id, appearance %>
    <li><%= "Episode #{appearance.episode.number} - #{appearance.episode.date.strftime("%B %d, %Y")}"%></li>
    <%= link_to appearance.guest.name, appearance.guest %>
    <p>
    <%= "Rating: #{appearance.rating}" %></li>
    <p>
    <%= "Producer who booked it: #{appearance.user.username}" %></li>
  <% end %>
</ul>
